<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/chat_incoming_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:background="@drawable/chat_incoming"
        android:orientation="vertical"
        android:layout_gravity="left">
        <TextView
            android:id="@+id/txtchatincoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/common_google_signin_btn_text_dark" />
        <TextView
            android:id="@+id/txtchatincomingdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textColor="#FFF"
            android:textSize="9dp"
            android:layout_gravity="right|bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_outcoming_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:background="@drawable/chat_outcoming"
        android:orientation="vertical"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/txtchatoutgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/common_google_signin_btn_text_dark" />
        <TextView
            android:id="@+id/txtchatoutgoingdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textColor="#FFF"
            android:textSize="9dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="right|bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
